<head>
    <script defer src="https://use.fontawesome.com/968ba4c321.js"></script>
    <script defer src="/app.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/forms.css">
  </head>
  
  <div class="mask">
      <div class="popup-container">
  
          <h1 class="form-title">Project Collaborators</h1>
          <hr>
          <!-- Cancel Button -->
          <a href="/tasks/<%= project_id %>" class="close-btn"><i class="fa fa-times"></i></a>
          
          <p class="collab-list-label">Current Project Collaborators</p>
          <div class="collab-list">
            <% collabs.forEach(collab => { %>
                <div class="collab-card">
                    <% if(collab._id.toString() !== "5f0cd8b9fed32e492a3170c1") { %>
                      <span><%= collab.name %></span>
                      <form style="display: inline;" action="/collaborators/<%= project_id %>/<%= collab._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger remove-collab">X</button>
                    </form>
                    <% } else { %>
                      <span id="not-assigned"><%= collab.name %></span>
                    <% } %>
                </div>
              <% }); %>
          </div>


          <form class="add-collab" action="/collaborators/<%= project_id %>" method="POST">
            <div class="form-group">
              <label for="collaborators">All Collaborators</label>
              <select class="form-control" name="collaborators" id="collaborators">
                <% allCollabs.forEach(collab => { %>
                    <option value="<%= collab._id %>"><%= collab.name %></option>
                    <% }); %>
              </select>
              <button class="btn btn-success add-collab-btn" type="submit">Add Collaborator</button>
            </div>
          </form>
  
          <!-- <button class="btn btn-primary submit-btn">Finished</button> -->
          <a href="/tasks/<%= project_id %>" class="btn btn-primary submit-btn">Finished</a>

      </div>
  </div>

  <div class="mask prompt-mask">
    <div class="prompt">
      <h2>Are you sure you want to remove ""?</h2>
      <div class="prompt-buttons">
        

        <button class="btn btn-primary prompt-cancel-btn">Cancel</button>
      </div>
    </div>
  </div>