<!DOCTYPE html>
<html lang="en">
<head>
  <script defer src="https://use.fontawesome.com/968ba4c321.js"></script>
  <link rel="stylesheet" href="/styles.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EasyDo</title>
</head>
<body>
  <h1>Tasks</h1>
  <div class="toolbar">Toolbar</div>
  <div class="task-group">

    <!-- To Do -->
    <div class="task-col">
      <div class="col-header">
        <span class="col-name">To Do</span>
        <% for(let i = 0; i < tasks.length; i++) { %>
          <% if(tasks[i].stage === 'to-do') { %>
            <div class="task-card">
              <span><%= tasks[i].name %></span>
              <div class="task-stats">
                <!-- <i class="fa fa-pencil" aria-hidden="true"></i> -->
                <img src="/images/default-profile.png" alt="profile">
                <span><%= tasks[i].collaborators.name %></span>
                <span><%= tasks[i].completionTime %></span>
              </div>
            </div>
          <% } %>
        <% }; %>
      </div>
    </div>

    <!-- In Progress -->
    <div class="task-col">
      <div class="col-header">
        <span class="col-name">In Progress</span>
        <% for(let i = 0; i < tasks.length; i++) { %>
          <% if(tasks[i].stage === 'in-progress') { %>
            <div class="task-card">
              <span><%= tasks[i].name %></span>
            </div>
          <% } %>
        <% }; %>
      </div>
    </div>

    <!-- Completed -->
    <div class="task-col">
      <div class="col-header">
        <span class="col-name">Completed</span>
        <% for(let i = 0; i < tasks.length; i++) { %>
          <% if(tasks[i].stage === 'completed') { %>
            <div class="task-card">
              <span><%= tasks[i].name %></span>
            </div>
          <% } %>
        <% }; %>
      </div>
    </div>
  </div>

</body>
</html>