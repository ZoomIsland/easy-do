<div class="task-card">
    <span><%= task.name %></span>
    <div class="task-stats">
      <img src="/images/default-profile.png" alt="profile">
      <span><%= task.collaborators %></span>
      <span><%= task.completionTime %></span>
    </div>
    <div class="options">
      <a href="/tasks/<%=task._id%>/edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
      
      <!-- Move to Stage Right -->
      <% if(task.stage === "completed") {%>
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
      <% } else { %>
        <a href="/tasks/<%=task._id%>/move-right/<%=task.stage%>">
          <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
      <% } %>

      <!-- Move to Stage Left -->
      <% if(task.stage === "to-do") {%>
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      <% } else { %>
        <a href="/tasks/<%=task._id%>/move-left/<%=task.stage%>">
          <i class="fa fa-chevron-left" aria-hidden="true"></i>
        </a>
      <% } %>
        
    </div>
  </div>